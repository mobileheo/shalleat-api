{
  "name": "shalleat_api",
  "version": "1.0.0",
  "description": "Backend server to provide API for ShallEat front-end with React",
  "main": "app.js",
  "scripts": {
    "start": "nodemon app.js",
    "dev": "nodemon --inspect=0.0.0.0:7778 app.js",
    "db:create": "createdb --echo shall_eat_api_dev",
    "db:drop": "dropdb --echo shall_eat_api_dev",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:make:seed": "knex seed:make",
    "db:make:migration": "knex migrate:make",
    "testdb:create": "createdb --echo shall_eat_api_test",
    "test": "cross-env NODE_ENV=test mocha --timeout 10000 tests/**/*.test.js --recursive --exit",
    "report": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --timeout 10000 tests/**/*.test.js"
  },
  "keywords": [
    "Express.js",
    "Passport.js",
    "PostgreSQL",
    "Knex",
    "Objection.js"
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-promise-router": "^3.0.2",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.2.2",
    "knex": "^0.14.6",
    "moment": "^2.22.1",
    "morgan": "^1.9.0",
    "objection": "^1.1.8",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth": "^1.0.0",
    "passport-instagram": "^1.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.4.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "faker": "^4.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.4",
    "nyc": "^12.0.2"
  },
  "nyc": {
    "exclude": [
      "test",
      "node_modules"
    ],
    "cache": false,
    "report-dir": "./tests/report"
  },
  "author": "Sunny (Yongseok)",
  "license": "ISC"
}
